<%= for post <- @posts do %>
  <div class="post">
    <div class="title">
      <h3><%= post.title %></h3>
      <h6>by <%= post.author %> (<%= post.updated_at %>)</h3>
    </div>
    <div class="content">
      <p><%= post.content %></p>
    </div>
  </div>
<%= end %>
<hr class="divider">
<div id="post_submission">
  <h4>Submit Entry</h4>
  <div id="post_errors"></div>
  <label>Author
    <input type="text" id="post_author">
  </label>
  <label>Title
    <input type="text" id="post_title">
  </label>
  <label>Content
    <textarea rows="5" id="post_content"></textarea>
  </label>
  <input type="hidden" value="<%= @token %>" name="_csrf_token" id="token" />
  <button id="post_btn">Send</button>
</div>