<div class="pl0 measure center tc pt4">
	<h2 class="f4 fw6 ph0 mh0">Password Reset</h2>
	<p>Please enter a new password for you to later forget.</p>

	<%= form_for @changeset, "/reset-password/#{@token}", fn f -> %>
		<%= if @changeset.action do %>
			<div class="alert alert-danger">
				<p>Oops, something went wrong! Please check the errors below.</p>
			</div>
		<% end %>

		<label>
			New Password: <%= password_input f, :password %>
		</label>

		<%= submit "Submit" %>
	<% end %>

</div>
